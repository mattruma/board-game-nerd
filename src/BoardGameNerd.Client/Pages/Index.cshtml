@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Hot Games</h1>

<div class="row row-cols-2 row-cols-md-6 g-4">
    @foreach (var game in Model.Games)
    {
      <div class="col">
        <div class="card">
            <a href="games/@game.Id">
                  <img src=@game.Thumbnail class="card-img-top" alt=@game.Name title=@game.Name>
            </a>
      </div>
      </div>
    }
</div>
